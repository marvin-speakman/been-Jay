{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
the {body} of the default.hbs template, which contains our header/footer. }}
{{> header-nav}}
{{#post}}
<section class="banner-container banner-post is-center big-post-image">

	<div class="banner">
		<h1 class="banner-head">{{{title}}}</h1>
		<p class="banner-subhead">
			<span class="post-author">Posted by {{author.name}} on </span><br>
			<time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">
				<span><i class="fa fa-calendar-o"></i> {{date format="DD MMM YYYY"}}</span>
			</time>
		</p>
		<p>
			&nbsp;
		</p>
	</div>

</section>
<article class="{{post_class}} l-content">

	<main class="content-wrapper">

		<section class="pure-g-r" >
			<div class="pure-u-1 l-content">
				<div class="alt-header"></div>
				<div class="post-content">

					{{content}}
				</div>

				<hr class="hr-styled">

				<div class="post-meta-footer">
					{{> post-tags}}
					{{> post-share}}
				</div>

				<footer class="post-footer">
					{{> author}}
				</footer>

				{{!>disqus-comments-config}} 
			</div>
		</section>


		{{> footer-site}}
	</main>
	{{/post}}
</article>
